<% if @decks.count == 0 %>
  <p>There doesn't seem to be anything here - would you like to <%=link_to "add a new deck", new_user_deck_path(user_id: @current_user.id) %>?</p>
<% else %>
  <% @decks.each do |deck| %>
    <div>
      <%= deck.name %><br>
      <%= deck.subject.name %>
    </div>
  <% end %>
<% end %>