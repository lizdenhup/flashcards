<h2>Welcome to Flashcard!</h2>

<div>
<% if user_signed_in? %>
  Logged in as <strong><%= current_user.email %></strong>.<br>
  <%= link_to "Review an existing set of flashcards", user_decks_path(user_id: @current_user.id)%><br>
  <%= link_to "Add a new set of flashcards", new_user_deck_path(user_id: @current_user.id) %><br>
<% else %>
  <%= link_to "Sign up", new_user_registration_path %><br>
  <%= link_to "Login", new_user_session_path %>
<% end %>
</div>
